@model DataSet
@using System.Data

@using (Html.BeginForm())
{
<div class="outer-box">
    <div class="login-box">

        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Ziyaretci Kodu</th>
                <th>Ziyaretci Adi</th>
                <th>Ziyaretci Kimlik No</th>
                <th>Ziyaretci Adres</th>
                <th>Hasta Adi</th>
                <th>Yakınlık</th>
                <th>Ziyaret Tarih</th>


            </tr>
            @foreach (DataRow row in Model.Tables[0].Rows)
            {
    <tr>
        <td>@row["ziyaretciID"] </td>
        <td>@row["ziyaretciAdi"] </td>
        <td>@row["ziyaretciTCNO"] </td>
        <td>@row["ziyaretciAdres"] </td>
        <td>@row["hastaAdi"] </td>
        <td>@row["yakınlık"] </td>
        <td>@row["ziyaretTarih"] </td>


    </tr>
}
        </table>
        <input type="text" name="ziyaretcikodu" class="form-control" placeholder="Ziyaretçi Kodu" />



        <button id="btn-login">Sil</button>

    </div>

</div>}